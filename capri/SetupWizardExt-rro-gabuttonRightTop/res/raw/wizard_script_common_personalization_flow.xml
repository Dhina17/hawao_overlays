<?xml version="1.0" encoding="UTF-8"?>
<!--
    The wizard:uris recorded here have the inconvenience of being generated by hand, but they allow
    for the full spread of launch flags (we need FLAG_ACTIVITY_NEW_TASK [0x10000000]), where the
    <intent> tag processed by Intent.parseIntent() does not.

    adb shell am to-intent-uri -a com.android.setupwizard.WELCOME -f 0x10000000 \-\-ez firstRun true
-->
<WizardScript xmlns:wizard="http://schemas.android.com/apk/res/com.google.android.setupwizard"
    wizard:version="2">
    <!-- Set up Google Assistant (OPA). This step should come right after Google Services.
       Feature enabled via Gservices flag  [RECOMMENDED] -->
    <WizardAction id="opa"
        wizard:uri="intent:#Intent;action=com.google.android.setupwizard.OPA_OPT_IN;B.valuePropSkippable=true;B.hardwareButtonTraining=true;S.opaSuwHardwareButtonPosition=righttop;end" />

    <!-- Set up payment method [RECOMMENDED] -->
    <WizardAction id="payment"
        wizard:uri="intent:#Intent;action=com.google.android.setupwizard.PAYMENTS;end" >
        <result wizard:action="google_one_wrapper" />
    </WizardAction>

    <!-- Wrapper for google one screen-->
    <WizardAction
        id="google_one_wrapper"
        wizard:uri="intent:#Intent;action=com.motorola.setup.GOOGLE_ONE_WRAPPER;end" >
        <result
            wizard:name="google_one_enabled"
            wizard:action="google_one"
            wizard:resultCode="120" />
        <result wizard:action="ytm_wrapper" />
    </WizardAction>

    <WizardAction id= "google_one"
        wizard:uri= "intent:#Intent;package=com.google.android.apps.subscriptions.red;action=com.android.setupwizard.GOOGLE_ONE;end" >
         <result wizard:action="ytm_wrapper" />
    </WizardAction>

    <!-- Wrapper for ytm suw screen-->
    <WizardAction
        id="ytm_wrapper"
        wizard:uri="intent:#Intent;action=com.motorola.setup.YTM_WRAPPER;end" >
        <result
            wizard:name="ytm_suw_enabled"
            wizard:action="ytm_suw"
            wizard:resultCode="130" />
        <result wizard:action="suggested_actions" />
    </WizardAction>

    <WizardAction id="ytm_suw"
        wizard:uri="intent:#Intent;action=com.google.android.setupwizard.YOUTUBE_MUSIC;end" >
         <result wizard:action="suggested_actions" />
    </WizardAction>

    <!-- Perform additional optional steps (while waiting for restoration to complete) [RECOMMENDED, CUSTOMIZABLE] -->
    <WizardAction id="suggested_actions"
        wizard:uri="intent:#Intent;action=com.google.android.setupwizard.SUGGESTED_ACTIONS;end" />

</WizardScript>
